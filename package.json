{
  "name": "actual-sync",
  "version": "1.0.0",
  "description": "Automated bank synchronization service for Actual Budget",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "sync": "node index.js --force-run",
    "list-accounts": "node scripts/listAccounts.js",
    "history": "node scripts/viewHistory.js",
    "validate-config": "node scripts/validateConfig.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/syncService.js",
      "!src/__tests__/**",
      "!index.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/",
      "/coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "keywords": [
    "actual-budget",
    "banking",
    "sync",
    "automation",
    "finance"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "@actual-app/api": "^25.12.0",
    "ajv": "^8.17.1",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "moment-timezone": "^0.6.0",
    "node-schedule": "^2.1.1",
    "nodemailer": "^7.0.11",
    "prom-client": "^15.1.3",
    "uuid": "^13.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0"
  }
}
